<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="juliethosorio.vitalapp.MiPerfil_Fragment">

    <LinearLayout
        android:id="@+id/activity_registro_usuario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        tools:context="juliethosorio.vitalapp.RegistroUsuarioActivity">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="4"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/btnMenuQR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qr1"
                android:background="@null"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:onClick="onClick"/>

            <ImageButton
                android:id="@+id/btnMenuGrupos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/grupo1"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:onClick="onClick"/>

            <ImageButton
                android:id="@+id/btnMenuDependiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/especial1"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:onClick="onClick"/>

            <ImageButton
                android:id="@+id/btnMenuCompras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/compras1"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:onClick="onClick"/>

        </GridLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#1C1C1C"
            android:layout_marginBottom="30dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/campoIdPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="identificacion"/>

                <TextView
                    android:id="@+id/campoNombresPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="nombre"/>

                <TextView
                    android:id="@+id/campoFechaNacimientoPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="fecha"/>

                <TextView
                    android:id="@+id/campotipoSangrePerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="tipo de sangre"/>

                <TextView
                    android:id="@+id/campoEPSperfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="eps"/>


                <TextView
                    android:id="@+id/campoCorreoPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="correo"/>

                <TextView
                    android:id="@+id/campotelefonoPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="telefono"/>

                <TextView
                    android:id="@+id/campoDireccionPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="direccion"/>

                <TextView
                    android:id="@+id/campoContactoPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="contacto"/>

                <TextView
                    android:id="@+id/campotelContactoPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="telefono contacto"/>

                <TextView
                    android:id="@+id/campoCondicionUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:hint="Condicion"/>

                <TextView
                    android:id="@+id/campoEnfermedadUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:hint="Enfermedad"/>

                <TextView
                    android:id="@+id/campoMedicamentosUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:hint="Medicamentos"/>




            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>
