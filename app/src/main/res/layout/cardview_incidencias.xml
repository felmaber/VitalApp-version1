<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardviewIncidencias2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#eceaea">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txtNombreUsuarioQr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3a82f5"
                    android:layout_alignLeft="@+id/txtFechaIncidencia"
                    android:layout_alignStart="@+id/txtFechaIncidencia"
                    android:layout_gravity="center"/>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="1"
                    android:columnCount="3"
                    android:layout_gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txtFechaIncidencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3a82f5"
                        android:layout_marginRight="70dp"
                        android:text="Fecha"
                        android:layout_gravity="center"
                        android:layout_below="@+id/txtNombreUsuarioQr" />

                    <TextView
                        android:id="@+id/txtHoraIncidencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3a82f5"
                        android:layout_marginRight="70dp"
                        android:text="Hora"
                        android:layout_gravity="center"
                        android:layout_below="@+id/txtNombreUsuarioQr"/>


                    <ImageButton
                        android:id="@+id/btnUbicacionIncidencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ubicacion1"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:layout_alignTop="@+id/txtHoraIncidencia" />

                </GridLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>