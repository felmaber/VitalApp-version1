<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="juliethosorio.vitalapp.ProfesionalSaludFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_registro_usuario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="juliethosorio.vitalapp.RegistroUsuarioActivity">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="4"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/btnMenuQR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qr1"
                android:background="@null"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:onClick="onClick"/>

            <ImageButton
                android:id="@+id/btnMenuGrupos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/grupo1"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:onClick="onClick"/>

            <ImageButton
                android:id="@+id/btnMenuDependiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/especial1"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:onClick="onClick"/>

            <ImageButton
                android:id="@+id/btnMenuCompras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/compras1"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:onClick="onClick"/>

        </GridLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profesional Salud"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#1C1C1C"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:id="@+id/campoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Registro Profesional"/>


        <Spinner
            android:id="@+id/spinnerEspecialidad"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content">
        </Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar"
                android:id="@+id/btnAgregarEspecialidad"
                android:layout_marginLeft="70dp"
                android:onClick="mostrarLista"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salir"
                android:id="@+id/btnCancelarEspecialidad"
                android:layout_marginLeft="20dp"
                android:onClick="mostrarLista"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
